{
  "private": true,
  "dependencies": {
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "roap": "file:.."
  },
  "devDependencies": {},
  "scripts": {
    "prebuild": "test -d ./node_modules || npm -s install",
    "build": "npx rollup --config",
    "clean": "rm -rf ./_out/",
    "watch": "npx rollup --config --watch",
    "pretest": "npm -s run build",
    "test": "npm -s run test:one",
    "test:one": "NODE_OPTIONS=--enable-source-maps  mocha ./_out/unittest.cjs.js",
    "test:min": "NODE_OPTIONS=--enable-source-maps  mocha --reporter=min ./_out/unittest.cjs.js"
  }
}
